@dc:^source "ISO 80000-5:2019(en)"
@dc:^source "https://www.iso.org/obp/ui/#iso:std:iso:80000:-5:ed-2:v1:en"
vocabulary <http://iso.org/80000-5-units> with # as 80000-5-units {
 
    extends <http://iso.org/80000-4-units>

    aspect UnitOfThermodynamicTemperatureValue :> metrology:UnitaryQuantityValue [
        restricts all relation metrology:hasReference to UnitOfThermodynamicTemperature
    ]
    
    @dc:^source "5-1"
    concept UnitOfThermodynamicTemperature :> metrology:CoherentMeasurementUnit [
        restricts scalar property metrology:isDimensionlessMeasurementUnit to false^^xsd:boolean
    ]

    concept kelvin :> UnitOfThermodynamicTemperature, metrology:IndependentMeasurementUnit, 80000-concepts:MeasurementUnit 

    aspect UnitOfCelciusTemperatureValue :> metrology:UnitaryQuantityValue [
        restricts all relation metrology:hasReference to UnitOfCelciusTemperature
    ]
    @dc:^source "5-2"
    concept UnitOfCelciusTemperature :> metrology:CoherentMeasurementUnit [
        restricts scalar property metrology:isDimensionlessMeasurementUnit to false^^xsd:boolean
    ]

    concept degreeCelcius :> UnitOfCelciusTemperature, metrology:DerivedMeasurementUnit, 80000-concepts:MeasurementUnit 

    relation entity degreeCelcius-of-kelvin :> metrology:HasFactorForMeasurementUnit [
        from degreeCelcius
        to kelvin
        forward degreeCelcius-of-kelvin-factor
        restricts scalar property metrology:exponent to "1/1"^^owl:rational
    ]

}